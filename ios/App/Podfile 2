require_relative '../../node_modules/@capacitor/ios/scripts/pods_helpers'

platform :ios, '15.0'
use_frameworks!

# workaround to avoid Xcode caching of Pods that requires
# Product -> Clean Build Folder after new Cordova plugins installed
# Requires CocoaPods 1.6 or newer
install! 'cocoapods', :disable_input_output_paths => true

def capacitor_pods
  pod 'Capacitor', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorCordova', :path => '../../node_modules/@capacitor/ios'
  pod 'CapacitorApp', :path => '../../node_modules/@capacitor/app'
  pod 'CapacitorInappbrowser', :path => '../../node_modules/@capacitor/inappbrowser'
  pod 'CapacitorPreferences', :path => '../../node_modules/@capacitor/preferences'
end

target 'App' do
  capacitor_pods
  # Add your Pods here
end

post_install do |installer|
  assertDeploymentTarget(installer)
  
  # ===========================================================================
  # FIX XCODE 16+: Desactivar verificaci贸n de m贸dulos y quoted includes
  # ===========================================================================
  
  # Aplicar configuraciones a NIVEL DE PROYECTO de Pods
  installer.pods_project.build_configurations.each do |config|
    config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
    config.build_settings['ENABLE_MODULE_VERIFIER'] = 'NO'
    config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
    # Desactivar estrictez de Clang para headers
    config.build_settings['CLANG_ENABLE_MODULES'] = 'YES'
    config.build_settings['DEFINES_MODULE'] = 'YES'
  end
  
  # Aplicar configuraciones a CADA TARGET de Pods
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      # Desactivar errores de quoted includes
      config.build_settings['CLANG_WARN_QUOTED_INCLUDE_IN_FRAMEWORK_HEADER'] = 'NO'
      # Desactivar verificaci贸n de m贸dulos (causa los errores double-quoted)
      config.build_settings['ENABLE_MODULE_VERIFIER'] = 'NO'
      # Desactivar sandboxing de scripts
      config.build_settings['ENABLE_USER_SCRIPT_SANDBOXING'] = 'NO'
      # Permitir comillas dobles en includes
      config.build_settings['GCC_WARN_ABOUT_INVALID_OFFSETOF_MACRO'] = 'NO'
      # Flags adicionales para suprimir warnings de headers
      config.build_settings['OTHER_CFLAGS'] ||= ['$(inherited)']
      config.build_settings['OTHER_CFLAGS'] << '-Wno-error=quoted-include-in-framework-header'
    end
  end
end
